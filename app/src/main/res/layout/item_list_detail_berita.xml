<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="100dp"
    android:layout_marginTop="5dp"
    android:layout_marginHorizontal="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/detailberita1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/berita1" />

        <TextView
            android:id="@+id/descriptionsumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/framedurasi"
            android:layout_alignStart="@id/detailberita1"
            android:layout_alignBottom="@id/detailberita1"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:text="Berita"
            android:fontFamily="@font/regular"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/titlesumber"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_alignStart="@id/descriptionsumber"
            android:layout_above="@id/descriptionsumber"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/framedurasi"
            android:fontFamily="@font/regular"
            android:text="Kompas.com"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="9sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>