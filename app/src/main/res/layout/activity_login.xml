<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="248dp"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="52dp"
        android:text="Masuk"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="387dp"
        android:layout_height="58dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="88dp"
        android:text="Yuk Masuk Akunmu Untuk Lebih Lanjut"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="#626262"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="157dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Password"
        android:textColor="#626262"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="128dp"
        android:text="atau login dengan"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="92dp"
        android:text="Belum punya akun? Daftar"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="375dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_inputtext"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:text="tes"
        android:textColor="#626262"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="375dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_inputtext"
        android:drawableEnd="@drawable/baseline_remove_red_eye_24"
        android:ems="10"
        android:inputType="textPassword"
        android:padding="10dp"
        android:text="tes"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />


    <Button
        android:id="@+id/button"
        android:layout_width="375dp"
        android:layout_height="60dp"
        android:backgroundTint="#E86A33"
        android:text="Masuk"
        android:textColor="#FFFFFFFF"
        app:cornerRadius="15dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="349dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="362dp"
        android:layout_height="57dp"
        android:backgroundTint="#FFFFFF"
        android:drawableStart="@drawable/logogoogle"
        android:text="Login dengan Google"
        android:textColor="#FF000000"
        app:cornerRadius="15dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="455dp" />
</androidx.constraintlayout.widget.ConstraintLayout>